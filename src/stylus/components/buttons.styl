/*************************

 BUTTONS

*************************/


/*------------------------------------------ 
  RESET
------------------------------------------*/
button
  border: none
  background-color transparent
  outline: none


/*------------------------------------------ 
  GLOBAL
------------------------------------------*/
button
  padding: 1em 2em
  background-color lighten($color_base, 15%)
  border-radius 4px
  width 100%
  color: $color_body
  font-size: 1.3em
  font-weight: 800
  letter-spacing: 1px
  text-transform: uppercase
  margin-bottom: 1.4em
  text-align: center
  transition: all .3s ease-in
  cursor: pointer
  &:hover
    background-color $color_base



/*------------------------------------------ 
  SWITCH
------------------------------------------*/
.switch-container
  display: inline-block
  position: relative
  span.point
    display: inline-block
    width: 26px
    height: 26px
    position: absolute
    left: 2px
    top: 2px
    background: $color_body
    border-radius: 50%
    transform: translateX(0%)
    transition: transform .4s
    z-index: 2
  .switch
    background: $grey-light
    border-radius: 30px
    cursor: pointer;
    display: inline-block
    height: 30px
    position: relative
    width: 60px
    transition: background .4s
    &:after
      content 'off'
      line-height: 30px
      position: absolute
      font-weight: 900
      text-transform: uppercase
      right: 8px
      color: $color_body
      z-index: 1
    &:before
      content 'on'
      line-height: 30px
      position: absolute
      font-weight: 900
      text-transform: uppercase
      left: 8px
      color: $color_body
      z-index: 1
    &-checkbox
      display: none
      &:checked ~ .switch
        background: $color_base
        span.point
          transform: translateX(100%)
          left: 6px



/*------------------------------------------ 
  SETTINGS BUTTON
------------------------------------------*/
.time-zone-container
  button
    width 47%
    margin: 1.3%
    &.cancell
      background-color #999
      &:hover
        background-color darken(#999, 15%)