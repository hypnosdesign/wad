/*------------------------------------------ 
  ALERT
------------------------------------------*/
#alert-message
  display: flex
  align-items: center
  justify-content: space-between
  padding: .65em 2em
  background-color: $color_base
  color: white
  font-size: 1.6em
  width 95%
  height: 100%
  margin: 0 auto 2em
  border-radius 10px
  opacity: 1
  transition: opacity .3s ease-in-out, padding .5s step-start, margin .5s step-start, height .5s step-start
  .closeBtn
    font-size: 1em
    font-weight: 900
    cursor: pointer
    padding: 3px
    transition: 0.2s;
    color: darken($color_base, 10%)
    &:hover
      color: darken($color_base, 40%)
input[type="checkbox"]
  display: none
input[type="checkbox"]:checked ~ #alert-message
  padding: 0
  margin: 0 auto
  height: 0
  opacity: 0
  overflow: hidden
  transition-timing-function: ease-in-out, step-end, step-end, step-end