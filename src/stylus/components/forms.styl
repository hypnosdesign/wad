/*************************

 FORMS

*************************/



/*------------------------------------------ 
  RESET
------------------------------------------*/
input,
textarea
  border: none
  outline: none
  background-color transparent
  -webkit-appearance: none
  &:focus
    outline: 0



/*------------------------------------------ 
  GLOBAL
------------------------------------------*/
input,
textarea
  padding: .65em 1.35em
  color: lighten($color_text, 20%)
  font-size: 1.4em
  border: 1px solid $color_border
  border-radius: 6px
  max-width: 100%
  width: 100%


/*------------------------------------------ 
  MAIN SEARCH
------------------------------------------*/
input#main-search
  float right
  max-width: 300px



/*------------------------------------------ 
  MESSAGE USER
------------------------------------------*/
.box--message-user
  form
    padding: 0 1.4em
  input,
  textarea
    background-color #f5f5f5
    margin-bottom: 1.6em
  textarea
    height 140px


/*------------------------------------------ 
  SELECT TIMEZONE
------------------------------------------*/
#select-timezone
  font-family: Nunito
  font-size: 1.4em
  color: $color_text
  border: 1px solid $color_base
  background-color lighten($color_base, 90%)
  border-radius: 6px
  width: 100%
  margin 1em auto
  outline: none


