//align img vertically
image-v(size){
	height: size;
	width: size;
	position: relative;
  top: 'calc(50% - %s / 2)' % size
}

// clearfix
cf() {
  zoom: 1;
  &:before,
  &:after {
    content ""
    display table
  }
  &:after {
    clear both
  }
}

// media queries

mq(breakpoints) {
  conditions = ()
  for breakpoint in breakpoints {
    push(conditions, media_queries[breakpoint])}
  conditions = join(", ", conditions)
  @media conditions
    {block}
}