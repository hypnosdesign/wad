// colors
@require 'palettes/index'

$lilla            = #7477bf
$green            = #81c98f
$white            = #fefefe
$black            = #0e0e0e
$grey             = #9e9e9e
$grey-light       = #e6e6e6


$color_base       = $lilla
$color_base-hover = darken($color_base, 8%)
$color_body       = $white
$color_text       = $black
$color_border     = $grey-light

$color_base-shade = shade($lilla,       35%)
$color_success    = $green

// import google fonts
@import url('https://fonts.googleapis.com/css?family=Nunito:200,400,800');

// media queries
media_queries = {
  tablet  : "only screen and (min-width: 601px)",
  desktop : "only screen and (min-width: 801px)"
}

