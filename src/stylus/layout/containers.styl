/*************************

 CONTAINERS

*************************/



/*------------------------------------------ 
  WRAPPER
------------------------------------------*/
#wrapper
  display: flex
  flex-direction: column
  margin-bottom: 7em
  +mq(tablet)
    flex-direction: row
    margin-bottom: 0
#wrapper-sections
  display: flex
  flex-direction: column


/*------------------------------------------ 
  FLEX
------------------------------------------*/
+mq(tablet)
  .flex
    display: flex
    flex-direction: row
    flex-wrap: wrap
    section
      flex: 1 1 50%
      &:nth-child(2n)
        border-left: 1px solid $color_border
    .box--message-user
      border-left: 1px solid $color_border




/*------------------------------------------ 
  SEARCH SECTION
------------------------------------------*/
section.search
  display: flex
  h2
    @extend h4
    margin: 0 1em
    align-self: center
  .box-search
    background-color #fbfbfb
    flex: 1
    padding: 1em
    border-left: 1px solid $color_border
    border-bottom: 1px solid $color_border



/*------------------------------------------ 
  CONTAINER GLOBAL
------------------------------------------*/
section.container
  border-bottom: 1px solid $color_border
  padding: 1em 0 3em
  h4
    font-size: 1.1em
    text-transform: uppercase
    font-weight: 800
    letter-spacing: 1px
    padding: 1.65em 0 1.65em 1em



/*------------------------------------------ 
  CHART CONTAINER GLOBAL
------------------------------------------*/
.chart-container
  width 100%
  max-height: 300px
  margin: 0 auto
  padding: 0 5%
  canvas
    height 300px



/*------------------------------------------ 
  TRAFFIC SECTION
------------------------------------------*/
.menu-traffic
  display: inline-block
  float: right
  margin-right: 2em
  padding: 1.4em 0
  p
    margin:0 .2em
    padding: .2em .3em
    font-size: 1.3em
    font-weight: 900
    color: #aaa
    cursor: pointer
    &.active,
    &:hover
      background-color $color_success
      color: $color_body
      border-radius: 3px
.f-left, 
.menu-traffic, 
.menu-traffic *
  display: inline-block



/*------------------------------------------ 
  SETTINGS SECTION
------------------------------------------*/
.settings-container
  display: flex
  justify-content: space-between
  align-items: center
  padding: .5em 2em
  max-width 400px

.time-zone-container
  padding: 1em 0
  margin: 0 auto
  width 95%

